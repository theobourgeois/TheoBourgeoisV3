---
import { FaEnvelope, FaGithub, FaLinkedin, FaTwitter } from "react-icons/fa";
import { cn } from "../lib/utils";
interface Props {
    snap?: boolean;
}

const { snap = true } = Astro.props;
---

<footer
    id="footer"
    class={cn(
        "text-slate-200 px-8 pb-24 sm:pb-8 pt-44 mt-24 bg-gradient-to-b from-zinc-950 to-zinc-900",
        {
            "snap-end snap-mandatory": snap,
        }
    )}
>
    <div class="flex flex-col items-center space-y-4 drop-shadow-lg">
        <h2 class="text-4xl font-semibold text-center">Théo Bourgeois</h2>
        <p class="text-xl">Software Engineer</p>
        <div class="flex space-x-4">
            <a
                href="https://www.linkedin.com/in/theobourgeois"
                class="text-3xl hover:text-blue-400"
            >
                <FaLinkedin />
            </a>
            <a
                href="mailto:theoobourgeois@gmail.com"
                class="text-3xl hover:text-blue-400"
            >
                <FaEnvelope />
            </a>
            <a
                href="https://twitter.com/_theobourgeois"
                class="text-3xl hover:text-blue-400"
            >
                <FaTwitter />
            </a>
            <a
                href="https://github.com/theobourgeois"
                class="text-3xl hover:text-blue-400"
            >
                <FaGithub />
            </a>
        </div>

        <p class="text-sm text-center">
            &copy; {new Date().getFullYear()} Théo Bourgeois. All rights reserved.
        </p>
    </div>
</footer>
